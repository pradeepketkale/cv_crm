<?xml version="1.0" encoding="UTF-8"?>
<config>
	<tabs>
		<qian translate="label">
			<label>Qian Extension</label>
			<sort_order>1500</sort_order>
		</qian>
	</tabs>
	<sections>
		<qian_bxgy translate="label">
			<label>Buy X Get Y</label>
			<tab>qian</tab>
			<frontend_type>text</frontend_type>
			<sort_order>50</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<general translate="label">
					<label>Buy X selection of products, Get another Y selection for free</label>
					<frontend_type>text</frontend_type>
					<sort_order>10</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<enable_reminder translate="label">
							<label>Enable offer reminder message</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>
							<![CDATA[
							Reminder message will show in cart when the offer is qualified but not taken or not fully taken
							]]>
							</comment>
						</enable_reminder>
						<reminder_template translate="label">
							<label>Reminder message template (html allowed)</label>
							<frontend_type>textarea</frontend_type>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>
							<![CDATA[
							Example: You have qualified for %s of any Y product! If you want to take advantage of this offer, add &lt;a href='/'&gt;Y product&lt;/a&gt; to your cart for free!
							]]>
							</comment>
						</reminder_template>
						<yqty_unit translate="label">
							<label>Y product quantity unit (when Y is zero in cart)</label>
							<frontend_type>text</frontend_type>
							<sort_order>30</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>
							<![CDATA[
							Example: pack(s) 
							]]>
							</comment>
						</yqty_unit>
						<yqty_unit_more translate="label">
							<label>Y product quantity unit (when Y is not zero in cart)</label>
							<frontend_type>text</frontend_type>
							<sort_order>40</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>
							<![CDATA[
							Example: more pack(s) 
							]]>
							</comment>
						</yqty_unit_more>
					</fields>
				</general>
			</groups>
		</qian_bxgy>
	</sections>
</config>