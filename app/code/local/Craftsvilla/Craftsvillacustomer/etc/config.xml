                <args>
                    <module>Craftsvilla_Craftsvillacustomer</module>
                    <frontName>craftsvillacustomer</frontName>
                </args>
            </craftsvillacustomer>
        </routers>
        <layout>
            <updates>
                <craftsvillacustomer>
                    <file>craftsvillacustomer.xml</file>
                </craftsvillacustomer>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<craftsvillacustomer>
				<use>admin</use>
				<args>
					<module>Craftsvilla_Craftsvillacustomer</module>
					<frontName>craftsvillacustomer</frontName>
				</args>
			</craftsvillacustomer>
        </routers>
    </admin>
