<?xml version="1.0"?>
<config>
    <modules>
        <Craftsvilla_Homepage>
            <version>0.4.0</version>
        </Craftsvilla_Homepage>
    </modules>
    <frontend>
      <routers>
            <homepage>
                <use>standard</use>
                <args>
                    <module>Craftsvilla_Homepage</module>
                    <frontName>homepage</frontName>
                </args>
            </homepage>
        </routers>
        <layout>
            <updates>
                <homepage>
                    <file>homepage.xml</file>
                </homepage>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<homepage>
				<use>admin</use>
				<args>
					<module>Craftsvilla_Homepage</module>
					<frontName>homepage</frontName>
				</args>
			</homepage>
        </routers>
    </admin>
    <adminhtml>
	<menu>
		<catalog>
		<children>
			<homepage module="homepage">
				<title>Homepage</title>
				<sort_order>71</sort_order>               
				<!--<children>
					<items module="bulkuploadcsv">
						<title>Manage Items</title>
						<sort_order>0</sort_order>-->
						<action>homepage/adminhtml_homepage</action>
					</homepage>
			</children>
			</catalog>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<!--<children>
						<Craftsvilla_Bulkinventoryupdate>
							<title>Bulkinventoryupdate Module</title>
							<sort_order>10</sort_order>
						</Craftsvilla_Bulkinventoryupdate>
					</children>-->
					<children>
					    <catalog>
		                  <children>
						<!--<Craftsvilla_Bulkuploadcsv>
							<title>Bulkuploadcsv Module</title>
							<sort_order>10</sort_order>
						</Craftsvilla_Bulkuploadcsv>
-->					<homepage module="homepage">
									<title>Homepage</title>
									<sort_order>19</sort_order>
								</homepage>
							</children>	
						</catalog>
					</children>	
				</admin>
			</resources>
		</acl>
		
		<layout>
			<updates>
				<homepage>
					<file>homepage.xml</file>
				</homepage>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <homepage>
                <class>Craftsvilla_Homepage_Model</class>
                <resourceModel>homepage_mysql4</resourceModel>
            </homepage>
            <homepage_mysql4>
                <class>Craftsvilla_Homepage_Model_Mysql4</class>
             <entities>
                    <homepage>
                        <table>homepage</table>
                    </homepage>
                </entities>
            </homepage_mysql4>
        </models>
        <resources>
            <homepage_setup>
                <setup>
                    <module>Craftsvilla_Homepage</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </homepage_setup>
            <homepage_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </homepage_write>
            <homepage_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </homepage_read>
        </resources>
        <blocks>
            <homepage>
                <class>Craftsvilla_Homepage_Block</class>
            </homepage>
        </blocks>
        <helpers>
            <homepage>
                <class>Craftsvilla_Homepage_Helper</class>
            </homepage>
        </helpers>
    </global>
</config>