<?xml version="1.0"?>
<config>
    <modules>
        <Craftsvilla_Fedexcourier>
            <version>0.1.0</version>
        </Craftsvilla_Fedexcourier>
    </modules>  
    <global>
        <models>
            <fedexcourier>
                <class>Craftsvilla_Fedexcourier_Model</class>
            </fedexcourier>
        </models>
		<helpers>
            <fedexcourier>
                <class>Craftsvilla_Fedexcourier_Helper</class>
            </fedexcourier>
        </helpers>
		
    </global>
	<adminhtml>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<system>
							<children>
								<config>
									<children>
										<fedexcourier translate="title">
											<title>Fedexcourier - All</title>
											<sort_order>100</sort_order>
										</fedexcourier>
									</children>
								</config>
							</children>
						</system>
					</children>
				</admin>
			</resources>
		</acl>
	</adminhtml>
</config>
