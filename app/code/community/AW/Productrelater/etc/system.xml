<?xml version="1.0"?><config>	<sections>		<productrelater translate="label" module="productrelater">			<label>Automatic Related Products</label>			<tab>awall</tab>			<frontend_type>text</frontend_type>			<sort_order>100</sort_order>			<show_in_default>1</show_in_default>			<show_in_website>1</show_in_website>			<show_in_store>1</show_in_store>			<groups> 				<mainoptions translate="label">                    <label>General options</label>                    <frontend_type>text</frontend_type>                    <sort_order>10</sort_order>                    <show_in_default>1</show_in_default>                    <show_in_website>1</show_in_website>                    <show_in_store>1</show_in_store>                    <fields>						<blockname translate="label">							<label>Block name</label>							<frontend_type>text</frontend_type>                            <sort_order>10</sort_order>                            <show_in_default>1</show_in_default>                            <show_in_website>1</show_in_website>                            <show_in_store>1</show_in_store>						</blockname>                        <replaceoriginalrp translate="label">							<label>Replace native Related Products</label>							<frontend_type>select</frontend_type>                            <source_model>adminhtml/system_config_source_yesno</source_model>                            <sort_order>20</sort_order>                            <show_in_default>1</show_in_default>                            <show_in_website>1</show_in_website>                            <show_in_store>1</show_in_store>                            <comment></comment>						</replaceoriginalrp>						<itemscount translate="label">                            <label>Number of items</label>                            <frontend_type>text</frontend_type>                            <sort_order>30</sort_order>                            <show_in_default>1</show_in_default>                            <show_in_website>1</show_in_website>                            <show_in_store>1</show_in_store>                            <comment></comment>                        </itemscount>						<source translate="label">							<label>Source</label>							<comment></comment>							<frontend_type>select</frontend_type>							<source_model>productrelater/sources</source_model>							<sort_order>40</sort_order>							<show_in_default>1</show_in_default>							<show_in_website>1</show_in_website>							<show_in_store>1</show_in_store>						</source> 						<selectproducts translate="label">							<label>Select products</label>							<comment></comment>							<frontend_type>select</frontend_type>							<source_model>productrelater/selectproducts</source_model>							<sort_order>50</sort_order>							<show_in_default>1</show_in_default>							<show_in_website>1</show_in_website>							<show_in_store>1</show_in_store>						</selectproducts> 						<fetchinstock translate="label">							<label>Fetch only in stock products</label>							<comment></comment>							<frontend_type>select</frontend_type>							<source_model>adminhtml/system_config_source_yesno</source_model>							<sort_order>60</sort_order>							<show_in_default>1</show_in_default>							<show_in_website>1</show_in_website>							<show_in_store>1</show_in_store>						</fetchinstock>						<applypriceconditionfor>							<label>Apply price condition for</label>							<frontend_type>select</frontend_type>							<source_model>productrelater/applypriceconditionfor</source_model>							<sort_order>70</sort_order>							<show_in_default>1</show_in_default>							<show_in_website>1</show_in_website>							<show_in_store>1</show_in_store>						</applypriceconditionfor>						<pricecondition translate="label">							<label>Price</label>							<comment></comment>							<frontend_type>select</frontend_type>							<source_model>productrelater/pricecondition</source_model>							<sort_order>80</sort_order>							<show_in_default>1</show_in_default>							<show_in_website>1</show_in_website>							<show_in_store>1</show_in_store>						</pricecondition>						<price translate="label">                            <label></label>                            <frontend_type>text</frontend_type>                            <sort_order>90</sort_order>                            <show_in_default>1</show_in_default>                            <show_in_website>1</show_in_website>                            <show_in_store>1</show_in_store>                            <comment></comment>                        </price>					</fields>				</mainoptions>			</groups>		</productrelater>	</sections></config>