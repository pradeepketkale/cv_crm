<?xml version="1.0"?> 
<config>
  <modules>
      <Gharpay> 
          <version>0.1.1</version>
      </Gharpay>
  </modules>
  <global> 
  	<models>
            <gharpay>
                <class>Gharpay_Model</class>
                <resourceModel>gharpay_mysql4</resourceModel>
            </gharpay>
            <gharpay_mysql4>
                <class>Gharpay_Model_Mysql4</class>
                <entities>
                    <gharpay>
                        <table>gharpay</table>
                    </gharpay>
				</entities>
            </gharpay_mysql4>
        </models>
        <blocks>
            <gharpay><class>Gharpay_Block</class></gharpay>
        </blocks>
        <resources>
            <gharpay_setup>
                <setup>
                    <module>Gharpay</module>
			<class>Gharpay_Model_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </gharpay_setup>
            <gharpay_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </gharpay_write>
            <gharpay_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </gharpay_read>
        </resources>
     	<helpers>
        	<gharpay>
          		<class>Gharpay_Helper</class>
        	</gharpay>
    	</helpers>
     <events>
     	<sales_order_save_commit_after>
             <observers>
                  <gharpay>
                        <class>Gharpay_Model_Observer</class>
         	            <method>createorder</method>
                  </gharpay>
             </observers>
         </sales_order_save_commit_after>
         <sales_order_save_after>
	        <observers>
	                <gharpay>
	                        <type>singleton</type>
	                        <class>Gharpay_Model_Observer</class>
	                        <method>cancelOrder</method>
	                </gharpay>
	        </observers>
	    </sales_order_save_after>
      </events>
  </global>
   
  <frontend>
  	<secure_url>
        <gharpay_standard>/gharpay/standard</gharpay_standard>
    </secure_url>
  	<routers>
    	<Gharpay>
        	<use>standard</use>
            <args>
               	<module>Gharpay</module>
                <frontName>gharpay</frontName>
            </args>
        </Gharpay>
    </routers>
  </frontend>
  <default>
      <payment>
          <gharpay_standard>
                <model>gharpay/standard</model>
                <title>Gharpay Standard</title>
                <allowspecific>0</allowspecific>
                <transaction_type>O</transaction_type>
          </gharpay_standard>
      </payment>
  </default>
</config>
