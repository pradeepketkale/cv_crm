<config>
    <modules>
        <Innoexts_CurrencyPricing>
            <version>1.1.1</version>
        </Innoexts_CurrencyPricing>
    </modules>
    <frontend>
        <translate>
            <modules>
                <Innoexts_CurrencyPricing>
                    <files>
                        <default>Innoexts_CurrencyPricing.csv</default>
                    </files>
                </Innoexts_CurrencyPricing>
            </modules>
        </translate>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <Innoexts_CurrencyPricing>
                    <files>
                        <default>Innoexts_CurrencyPricing.csv</default>
                    </files>
                </Innoexts_CurrencyPricing>
            </modules>
        </translate>
        <layout>
              <updates>
                  <currencypricing>
                      <file>currencypricing.xml</file>
                  </currencypricing>
              </updates>
        </layout>
    </adminhtml>
    <global>
        <models>
            <currencypricing>
                <class>Innoexts_CurrencyPricing_Model</class>
            </currencypricing>
            <currencypricing_mysql4>
                <class>Innoexts_CurrencyPricing_Model_Mysql4</class>
            </currencypricing_mysql4>
            <bundle_mysql4>
                <rewrite>
                    <indexer_price>Innoexts_CurrencyPricing_Model_Mysql4_Bundle_Indexer_Price</indexer_price>
                </rewrite>
            </bundle_mysql4>
            <catalog>
                <rewrite>
                    <product_attribute_backend_tierprice>Innoexts_CurrencyPricing_Model_Catalog_Product_Attribute_Backend_Tierprice</product_attribute_backend_tierprice>
                </rewrite>
            </catalog>
            <catalog_resource_eav_mysql4>
                <entities>
                    <product_currency_price>
                        <table>catalog_product_currency_price</table>
                    </product_currency_price>
                    <product_currency_special_price>
                        <table>catalog_product_currency_special_price</table>
                    </product_currency_special_price>
                </entities>
                <rewrite>
                    <product_collection>Innoexts_CurrencyPricing_Model_Mysql4_Catalog_Product_Collection</product_collection>
                    <product_indexer_price>Innoexts_CurrencyPricing_Model_Mysql4_Catalog_Product_Indexer_Price</product_indexer_price>
                    <product_indexer_price_default>Innoexts_CurrencyPricing_Model_Mysql4_Catalog_Product_Indexer_Price_Default</product_indexer_price_default>
                    <product_indexer_price_grouped>Innoexts_CurrencyPricing_Model_Mysql4_Catalog_Product_Indexer_Price_Grouped</product_indexer_price_grouped>
                    <product_indexer_price_configurable>Innoexts_CurrencyPricing_Model_Mysql4_Catalog_Product_Indexer_Price_Configurable</product_indexer_price_configurable>
                    <product_attribute_backend_tierprice>Innoexts_CurrencyPricing_Model_Mysql4_Catalog_Product_Attribute_Backend_Tierprice</product_attribute_backend_tierprice>
                </rewrite>
            </catalog_resource_eav_mysql4>
            <directory>
                <rewrite>
                    <currency>Innoexts_CurrencyPricing_Model_Directory_Currency</currency>
                </rewrite>
            </directory>
            <downloadable_mysql4>
                <rewrite>
                    <indexer_price>Innoexts_CurrencyPricing_Model_Mysql4_Downloadable_Indexer_Price</indexer_price>
                </rewrite>
            </downloadable_mysql4>
        </models>
        <resources>
            <currencypricing_setup>
                <setup>
                    <module>Innoexts_CurrencyPricing</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </currencypricing_setup>
            <currencypricing_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </currencypricing_write>
            <currencypricing_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </currencypricing_read>
        </resources>
        <events>
            <!-- Product Prices -->
            <catalog_product_save_after>
                <observers>
                    <currencypricing_save_product_currency_price>
                        <class>currencypricing/observer_catalog</class>
                        <method>saveProductCurrencyPrice</method>
                    </currencypricing_save_product_currency_price>
                </observers>
            </catalog_product_save_after>
            <catalog_product_load_after>
                <observers>
                    <currencypricing_load_product_currency_price>
                        <class>currencypricing/observer_catalog</class>
                        <method>loadProductCurrencyPrice</method>
                    </currencypricing_load_product_currency_price>
                </observers>
            </catalog_product_load_after>
            <catalog_product_collection_load_after>
                <observers>
                    <currencypricing_load_product_collection_currency_price>
                        <class>currencypricing/observer_catalog</class>
                        <method>loadProductCollectionCurrencyPrice</method>
                    </currencypricing_load_product_collection_currency_price>
                </observers>
            </catalog_product_collection_load_after>
            <catalog_product_clear>
                <observers>
                    <currencypricing_remove_product_currency_price>
                        <class>currencypricing/observer_catalog</class>
                        <method>removeProductCurrencyPrice</method>
                    </currencypricing_remove_product_currency_price>
                </observers>
            </catalog_product_clear>
            <!-- Product Currency Special Prices -->
            <catalog_product_save_after>
                <observers>
                    <currencypricing_save_product_currency_special_price>
                        <class>currencypricing/observer_catalog</class>
                        <method>saveProductCurrencySpecialPrice</method>
                    </currencypricing_save_product_currency_special_price>
                </observers>
            </catalog_product_save_after>
            <catalog_product_load_after>
                <observers>
                    <currencypricing_load_product_currency_special_price>
                        <class>currencypricing/observer_catalog</class>
                        <method>loadProductCurrencySpecialPrice</method>
                    </currencypricing_load_product_currency_special_price>
                </observers>
            </catalog_product_load_after>
            <catalog_product_collection_load_after>
                <observers>
                    <currencypricing_load_product_collection_currency_special_price>
                        <class>currencypricing/observer_catalog</class>
                        <method>loadProductCollectionCurrencySpecialPrice</method>
                    </currencypricing_load_product_collection_currency_special_price>
                </observers>
            </catalog_product_collection_load_after>
            <catalog_product_clear>
                <observers>
                    <currencypricing_remove_product_currency_special_price>
                        <class>currencypricing/observer_catalog</class>
                        <method>removeProductCurrencySpecialPrice</method>
                    </currencypricing_remove_product_currency_special_price>
                </observers>
            </catalog_product_clear>
            <!-- Product -->
            <catalog_product_collection_load_before>
                <observers>
                    <currencypricing_before_product_collection_load>
                        <class>currencypricing/observer_catalog</class>
                        <method>beforeProductCollectionLoad</method>
                    </currencypricing_before_product_collection_load>
                </observers>
            </catalog_product_collection_load_before>
            <catalog_product_collection_apply_limitations_after>
                <observers>
                    <currencypricing_after_product_collection_apply_limitations>
                        <class>currencypricing/observer_catalog</class>
                        <method>afterProductCollectionApplyLimitations</method>
                    </currencypricing_after_product_collection_apply_limitations>
                </observers>
            </catalog_product_collection_apply_limitations_after>
            <!-- Currency -->
            <directory_currency_rates_save_after>
                <observers>
                    <currencypricing_after_currency_rates_save>
                        <class>currencypricing/observer_directory</class>
                        <method>afterCurrencyRatesSave</method>
                    </currencypricing_after_currency_rates_save>
                </observers>
            </directory_currency_rates_save_after>
        </events>
        <blocks>
            <currencypricing>
                <class>Innoexts_CurrencyPricing_Block</class>
            </currencypricing>
            <adminhtml>
                <rewrite>
                    <catalog_product_edit_tab_attributes>Innoexts_CurrencyPricing_Block_Adminhtml_Catalog_Product_Edit_Tab_Attributes</catalog_product_edit_tab_attributes>
                    <catalog_product_edit_tab_price_tier>Innoexts_CurrencyPricing_Block_Adminhtml_Catalog_Product_Edit_Tab_Price_Tier_Renderer</catalog_product_edit_tab_price_tier>
                </rewrite>
            </adminhtml>
        </blocks>
        <helpers>
            <currencypricing>
                <class>Innoexts_CurrencyPricing_Helper</class>
            </currencypricing>
            <tax>
                <rewrite>
                    <data>Innoexts_CurrencyPricing_Helper_Tax_Data</data>
                </rewrite>
            </tax>
        </helpers>
    </global>
</config>